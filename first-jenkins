pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out code..."
                checkout scm
            }
        }

        stage('List Files') {
            steps {
                sh 'ls -la'
            }
        }

        stage('Hello') {
            steps {
                echo "Pipeline is working correctly!"
            }
        }
    }
}
